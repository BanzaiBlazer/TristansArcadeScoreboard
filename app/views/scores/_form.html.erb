<%= form_for(@score) do |f| %>
  <% if @score.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@score.errors.count, "error") %> prohibited this score from being saved:</h2>

      <ul>
      <% @score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :lowest_time %><br>
    <%= f.number_field :lowest_time %>
  </div>
  <div class="field">
    <%= f.label :player_id %><br>
    <!-- 
      - http://guides.rubyonrails.org/form_helpers.html#making-select-boxes-with-ease
      - http://apidock.com/rails/ActionView/Helpers/FormTagHelper/select_tag
      -->
    <%= f.select :player_id, options_from_collection_for_select(@players, "id", "name") %>
    <%= @score.player %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
